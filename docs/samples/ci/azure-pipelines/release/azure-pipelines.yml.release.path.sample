jobs:
- job: linux
  displayName: '[Linux]'
  pool:
    vmImage: ubuntu-16.04
  steps:
  - checkout: self
    submodules: recursive
  - template: templates/azure-pipelines/entrypoint/pwsh/generate.yml@PSRepositoryReleaseManager
    parameters:
      NAME: My release name
      NOTES_PATH: path/to/my-release-notes.md
      DRAFT: false
      PRERELEASE: false
